{
  "compilerOptions": {
    "target": "ES2020",                        // Modern JavaScript output
    "module": "CommonJS",                      // Use CommonJS for Node.js
    "strict": true,                            // Enable all strict type-checking options
    "esModuleInterop": true,                   // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,  // File name case sensitivity
    "skipLibCheck": true,                      // Skip checking .d.ts files
    "outDir": "./dist",                        // Output directory for compiled files
    "rootDir": "./src",                        // Input source directory
    "moduleResolution": "node",                // Use Node.js-style module resolution
    "resolveJsonModule": true,                 // Allow importing JSON files
    "isolatedModules": true                    // Required if using with Babel or SWC
  },
  "include": ["src"],                          // Files/folders to compile
  "exclude": ["node_modules", "dist"]          // Files/folders to ignore
}
